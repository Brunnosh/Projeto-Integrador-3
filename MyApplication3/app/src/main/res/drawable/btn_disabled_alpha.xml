<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Botão habilitado -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <!-- Defina a cor e a opacidade do botão quando estiver habilitado -->
            <solid android:color="@color/SegundaCorPadrao" />
        </shape>
    </item>
    <!-- Botão desabilitado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <!-- Defina a cor e a opacidade do botão quando estiver desabilitado -->
            <solid android:color="@color/botao_cor_apagada" />
            <!-- Ajuste o nível de alfa para a transparência desejada (50% neste exemplo) -->
            <alpha android:alpha="0.5" />
        </shape>
    </item>
</selector>
